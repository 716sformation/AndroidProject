<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >



    <ImageView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/body"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        />

    <ImageView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/head"
        android:layout_above="@id/body"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/right_hand"
        android:layout_toRightOf="@id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hand"
        android:layout_below="@id/head"

        />

    <ImageView
        android:id="@+id/left_hand"
        android:layout_toLeftOf="@id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hand"
        android:layout_below="@id/head"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/body"
        >

    <ImageView
        android:id="@+id/right_leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leg"
        android:layout_toRightOf="@id/left_leg"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/left_leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leg"

        />
    </RelativeLayout>

</RelativeLayout>